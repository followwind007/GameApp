AtlasItemPanel {
    flex-direction: column;
    flex-grow: 1;
    justify-content: center;
    margin-right: 5;
    margin-left: 5;
    margin-top: 5;
    margin-bottom: 5;
    background-color: #a1a3a6;
}

AtlasItemPanel > #labelName {
    height: 20;
    text-alignment: middle-center;
    font-size: 11;
    overflow: hidden;
    margin-left: 0;
    margin-right: 0;
    background-color: rgba(255, 255, 255, 0.4);
}

AtlasItemPanel > #img {
    height: 40;
    width: 40;
}

AtlasItemPanel > #content {
    flex-grow: 1;
    flex-direction: column;
    background-color: #8a8c8e;
}

AtlasItemPanel > #content > #contentSub1 {
    background-color: #d3d7d4;
    flex-direction: column;
    margin-top:2;
    margin-bottom: 2;
}

AtlasItemPanel > #content > #contentSub1 > #labelParticle {
    color: #d93a49;
}

AtlasItemPanel > #content > #detail {
    flex-grow: 1;
    flex-direction: row;
}

AtlasItemPanel > #content > #detail > #formatNormal {
    color: #121a2a;
}

AtlasItemPanel > #content > #detail > #formatWarning {
    color: #f58220;
}

AtlasItemPanel > #content > #detail > #formatError {
    color: #d93a49;
    font-style: bold;
}