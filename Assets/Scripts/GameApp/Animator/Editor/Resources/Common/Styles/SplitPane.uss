.split-pane {
    flex-grow: 1;
    overflow: hidden;
}

.split-pane--vertical {
    flex-direction: column;
}

.split-pane--horizontal {
    flex-direction: row;
}

.split-pane__content-container {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
}

.split-pane__handle-container {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
}

.split-pane__dragline {
    background-color: rgba(0, 0, 0, 0);
    position: absolute;
}

.split-pane__dragline--horizontal {
    width: 10px;
    left: -5px;
    top: 0px;
    bottom: 0px;
    cursor: resize-horizontal;
}

.split-pane__dragline--vertical {
    height: 10px;
    top: -5px;
    left: 0px;
    right: 0px;
    cursor: resize-vertical;
}

.split-pane__dragline-anchor {
    position: absolute;
    background-color: rgb(89, 89, 89);
}

.split-pane__dragline-anchor:hover {
    background-color: rgb(255, 255, 255);
}

.split-pane__dragline-anchor--horizontal {
    width: 1px;
    top: 0px;
    bottom: 0px;
}

.split-pane__dragline-anchor--vertical {
    height: 1px;
    left: 0px;
    right: 0px;
}